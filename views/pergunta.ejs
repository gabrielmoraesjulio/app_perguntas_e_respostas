<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %> </h1> <!--buscando a coluna no array da variavel que vem do index.js-->
        <p> <%= pergunta.descricao %> </p> 
        <hr>

        <div>
            <form method="post" action="/responder">
                <h3>Responder</h3>
                <label>Resposta:</label>
                <textarea placeholder="Digite sua resposta" class="form-control mt-2" name="corpo"></textarea>
                <br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>"> <!-- especificar qual pergunta vai ser respondida -->
                <button type="submit" class="btn btn-primary">RESPONDER</button>
            </form>
        </div>
        
        <hr>
        <h3>Respostas</h3>
        <hr>

        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p> <!-- variavel com as respostas da pergunta -->
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>